.torrent-collection-container
    height 100%
    width 100%
    position fixed
    background-color $BgColor1
    -webkit-user-select none
    opacity 1

    .margintop
        height 100px

    .content
        margin 0 auto
        width 85%
        height calc(100% - 140px)
        color $TextError
        font-weight 100
        font-family $AlternateFont
        font-size 17px

        #savedtorrentslabel
            font-size 50px
            opacity 0.07
            left 80px
            top 122px
            text-align left
            position absolute
            z-index -1

        #searchresultslabel
            font-size 48px
            opacity 0.07
            left 80px
            top 126px
            text-align left
            position absolute
            z-index -1

        #savedtorrentslabeltext,
        #searchresultslabeltext
            font-size 36px
            font-family $MainFontBold
            font-style normal
            opacity 0.07
            left 134px
            top 134px
            text-align left
            position absolute
            z-index -1

        .onlinesearch
            position relative
            top -10px
            padding-left 140px
            width 460px
            margin 0 auto
            
            .search_in
                background-color $InputBoxBg
                margin 0px 0px 15px -88px
                padding 9px 0px 9px 2px
                display none
                position absolute
                height 30px
                min-width 352px

                span
                    color $InputBoxText
                    font-family $MainFont
                    font-size 12px
                    float left
                    height 12px
                    padding 0px 8px 10px 8px
                    vertical-align top
                    opacity 0.85
                    margin-top 1px
                    transition opacity .1s ease-in

                    &:hover
                        opacity 1

                input[type=checkbox]
                    &.sengine-checkbox
                        position absolute
                        overflow hidden
                        clip rect(0 0 0 0)
                        height 1px
                        width 1px
                        margin -1px
                        padding 0
                        border 0

                    &.sengine-checkbox+label
                        height 12px
                        display inline-block
                        line-height 12px
                        font-size 12px
                        font-family $MainFont
                        vertical-align middle
                        cursor pointer
                        color $SettingsText1
                        opacity 0.5

                        &:hover
                            opacity 1

                    &.sengine-checkbox:checked+label
                        opacity 1
                        &:after
                            opacity 1

                label
                    &:before
                        content '\f0c8'
                        font-family "Font Awesome 5 Free"
                        font-weight 900
                        font-size 12px
                        padding-right 5px
                        margin-left -1px
                        float left
                        position relative
                        color $CheckboxBg
                    &:after
                        content '\f00c'
                        font-family "Font Awesome 5 Free"
                        font-weight 900
                        font-size 10px
                        margin-right -14px
                        color $CheckboxCheck
                        position relative
                        float left
                        left -15px
                        opacity 0
                        transition opacity .1s ease-in-out

            .engine-selector
                position absolute
                margin-left -160px

                div
                    width 30px
                    height 30px
                    opacity .3
                    float left
                    cursor pointer
                    transition opacity .1s ease-in

                    &#kat-icon
                        background url('../images/icons/kickasstorrents.png')
                        background-size contain

                    &#strike-icon
                        -webkit-filter $PngLogo_BgColo1
                        background url('../images/icons/getstrike.png')
                        background-size contain

                    &.active
                        opacity 1

            input[type="text"]
                border 0 !important
                line-height 16px
                background-color $InputBoxBg
                resize none
                color $InputBoxText
                font-family $Font, $AlternateFont
                font-size 13px
                padding-left 10px
                cursor text
                outline 0 !important
                height 30px
                min-width 264px

            .online-search
                margin-left 5px
                cursor pointer
                transition color .3s

                &:hover
                    color: $ButtonBgHover

            .togglesengines
                cursor pointer
                transition color .3s

                &:hover
                    color: $ButtonBgHover

            .dropdown
                position absolute
                margin-top 9px
                margin-left -88px
                border-bottom 3px solid $BgColor1
                border-right 3px solid $BgColor1
                z-index 1000

                select
                    position relative
                    padding-left 5px
                    border 0 !important
                    -webkit-appearance none
                    height 30px
                    width 85px
                    line-height 25px
                    margin-top -9px
                    background-color $InputBoxBg
                    cursor pointer
                    color $InputBoxText
                    font-family $Font, $AlternateFont
                    font-size 13px
                    float left
                    outline 0
                    padding-right 15px

                option
                    background $InputBoxBg
                    border 0 !important
                    outline 0

                .dropdown-arrow
                    width 0
                    height 0
                    border-left 4px solid transparent
                    border-right 4px solid transparent
                    border-top 5px solid $Text2
                    top 4px
                    margin-left -13px
                    position relative
                    float left
                    cursor pointer

        .notorrents-info
            display block
            height 90%
            margin-top 10%

            .notorrents-frame
                border 6px dashed $TextError
                margin 0 auto
                width 250px
                height 250px
                border-radius 25px
                color $TextError
                text-align center
                transition all .3s
                cursor pointer

                &:hover
                    color $ButtonBgHover
                    border-color $ButtonBgHover
                &:active
                    color $ButtonBgActive
                    border-color $ButtonBgActive

                .notorrents-icon
                    font-size 120px
                    padding-top 40px

                .notorrents-message
                    font-family $MainFontBold
                    font-size 20px

        .torrents-info,
        .onlinesearch-info
            display none
            margin 60px auto
            height calc(100% - 90px)
            color $Text1
            font-family $AlternateFont
            font-size 17px
            text-align center
            scrollable()

            .online-back
                position fixed
                font-size 25px
                color $TextError
                cursor pointer
                right 7%
                top 152px
                transition color .3s

                &:hover
                    color $Text1

            ul
                li.file-item,
                li.result-item
                    border-bottom 1px solid rgba(255, 255, 255, 0.06)
                    background $FileSelectorBg
                    text-align left
                    cursor pointer
                    color $FileSelectorText
                    height 46px
                    padding-left 40px
                    padding-top 14px
                    padding-right 50px

                    a
                        color $FileSelectorText
                        text-decoration blink
                        width 100%
                        display block
                        transition all 0.3s
                        overflow hidden
                        white-space nowrap
                        text-overflow ellipsis

                        &:hover
                            color $ButtonBgHover
                        &:active
                            color $ButtonBgActive

                    .item-delete,
                    .item-rename
                        position relative
                        color: $TextError
                        transition all 0.3s
                        cursor pointer
                        left calc(100% + 25px)
                        top -15px

                        &:hover
                            color $ButtonBgHover

                    .item-rename
                        left calc(100% - 15px)

                    .item-icon
                        position relative
                        font-family "Font Awesome 5 Free"
                        font-weight: 900
                        font-style normal
                        font-size 15px
                        height 15px
                        width 15px
                        color $FileSelectorText
                        opacity 0.7
                        left -25px
                        margin-top -16px

                        &.torrent-icon:before
                            content: '\f016'
                        &.magnet-icon:before
                            content: '\f076'

                        &.magnet-icon:hover
                            cursor pointer
                            opacity 1

                    .online-size
                        position relative
                        color: $TextError
                        font-style normal
                        font-size .9em
                        left calc(100% - 35px)
                        top -15px

                li.result-item a
                    width calc(100% - 50px)

        .collection-actions
            display none
            position absolute
            color $TextError

            .collection-paste
                position fixed
                right 85px
                bottom 16px
                transition all 0.3s
                cursor pointer
                &:hover
                    color $ButtonBgHover
            .collection-open
                position fixed
                right 25px
                bottom 15px
                transition all 0.3s
                cursor pointer
                &:hover
                    color $ButtonBgHover
            .collection-import
                position fixed
                right 60px
                bottom 15px
                transition all 0.3s
                cursor pointer
                &:hover
                    color $ButtonBgHover
            /* override bootstrap */
            .tooltip
                min-width 150px
