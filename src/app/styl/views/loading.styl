.loading
    position: absolute
    background-color: $BgColor1
    -webkit-user-select: none
    width 100%
    height 100%
    opacity 1
    overflow hidden
    margin auto
    left 0
    right 0
    padding-top $TitleHeight
    -webkit-backface-visibility hidden

    .loading-backdrop
        position: absolute
        width: 100%
        height: 100%
        background-repeat no-repeat
        background-position-x 50%
        background-position-y 0px
        background-size cover
        -webkit-filter: blur(15px) brightness(0.7)

    .loading-backdrop-overlay
        width 100%
        height 100%
        position absolute
        opacity 0.65
        background-color #000

    .state
        color #fff
        font-family $MainFont
        -webkit-font-smoothing antialiased
        text-align center
        width 40%
        height 350px
        z-index 11
        margin auto
        left 0
        right 0
        -webkit-backface-visibility hidden
        position: relative
        top: calc(50% - 180px)

        .title
            font-family $MainFontBold
            font-size 16px
            line-height 20px
            padding-bottom 10px
            text-overflow ellipsis
            word-wrap break-word

        .external-play
            font-size 14px
            font-style: italic
            padding-bottom 40px

        .loading-progressbar
            position relative
            margin-bottom 10px
            margin-top 10px
            width 100%
            background-color #bababa
            border-radius 13px
            overflow hidden

            & > div
                background-color $ButtonBgActive
                margin-left -100%
                width 100%
                height 5px
                border-radius 13px
                left 0px
                animation-name bounce_bar
                animation-duration 3s
                animation-iteration-count infinite
                animation-timing-function linear

        .playing-progressbar
            position relative
            margin-bottom 10px
            margin-top 10px
            background-color #bababa
            border-radius 13px
            //padding 3px

            & > div
                background-color $ButtonBgActive
                height 10px
                border-radius 13px
                left 0px

        .player-controls
            text-align center
            margin-left 40px
            color $Text1
            font-size 24px
            margin-top 20px
            i
                cursor pointer
                margin-right 20px
        .cancel-button
            bottom 20px
            z-index 2
            position absolute
            cursor pointer
            width 120px
            height 35px
            margin auto
            left 0
            right 0
            -moz-border-radius 3px
            -webkit-border-radius 3px
            border-radius 3px
            -moz-background-clip padding
            -webkit-background-clip padding-box
            background-clip padding-box
            background-color $ButtonBg
            -webkit-backface-visibility hidden
            transition all .5s

            &:hover
                background: $ButtonBgHover
                text-decoration: none

            &:active
                box-shadow: inset 0 1px 4px rgba(0,0,0,0.6)
                background: $ButtonBgActive

            .cancel-button-text
                -webkit-backface-visibility hidden
                position relative
                color #fff
                font-family $MainFont, $Font, $AlternateFont
                -webkit-font-smoothing antialiased
                text-align center
                top 12px
                font-size 12px

        .loading-info
            width 60%
            max-width 300px
            height auto
            margin auto
            padding 10px
            padding-bottom 20px
            border-radius 4px
            left 0
            right 0
            background: rgba(0, 0, 0, .6)

            span
                position relative
                color #fff
                font-family $MainFont
                -webkit-font-smoothing antialiased
                font-size 12px
                line-height 14px

                &.loading-info-text
                    float left
                &.value
                    float right

            .buffer_percent
                text-align center
                font-size 14px
                line-height 10px

    .warning-nospace
        display none
        position absolute
        bottom 30px
        width 66%
        left 17%
        text-align center
        color #fff
        .warn
            font-size 13px
        .detail
            opacity .85
            font-size 11px

        &:before
            content '\f071'
            color #FFFF00
            font-family "fontawesome"
            font-size 16px
            padding-right 8px

@keyframes bounce_bar
    0%
        margin-left:-100%;
    100%
        margin-left:100%;