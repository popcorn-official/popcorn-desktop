		.btn-settings
			position relative
			margin-top 13px
			float left
			padding-left 10px
			padding-right 10px
			margin-right 20px
			border-radius 3px
			height 35px
			background-color #1f375f
			text-align center
			color #e3e5e7
			font-family "Open Sans", sans-serif
			font-size 13px
			line-height 34px
			cursor pointer
			transition background-color .5s
			&:hover
				background-color #225694
				text-decoration none
			&.disabled
				background-color #393b3d
				&:hover
					background-color #223547
				&:active
					background-color #223547

			&.green
				background-color #27AE60
			&.red
